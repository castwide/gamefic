#!/usr/bin/env ruby

require 'gamefic'
require 'gamefic/shell'

# make play the default command but retain help and no commands
# this works because we only have one real command here
args = %w(play help).include?(ARGV[0].downcase) || ARGV.count.zero? ? ARGV : ARGV.dup.unshift('play')

Gamefic::Shell.start(args)
